{
  "name": "ast-grep-vscode",
  "version": "0.1.5",
  "description": "ast-grep VSCode is a structural search and replace extension for many languages.",
  "keywords": [
    "ast",
    "ast-grep",
    "code search",
    "language-server",
    "lint",
    "multiline search",
    "refactor",
    "rewrite",
    "search and replace",
    "structural replace",
    "structural search",
    "structural",
    "syntax",
    "vscode",
    "extension"
  ],
  "publisher": "ast-grep",
  "preview": false,
  "displayName": "ast-grep VSCode: Structural Search, Replace and more",
  "homepage": "https://ast-grep.github.io",
  "repository": "https://github.com/ast-grep/ast-grep-vscode",
  "author": "Herrington Darkholme",
  "license": "MIT",
  "main": "./out/extension.js",
  "engines": {
    "vscode": "^1.87.0"
  },
  "icon": "media/favicon.png",
  "categories": ["Linters", "Programming Languages", "Other"],
  "activationEvents": ["onStartupFinished"],
  "contributes": {
    "commands": [
      {
        "command": "ast-grep.executeAutofix",
        "title": "executeAutofix",
        "category": "ast-grep"
      },
      {
        "command": "ast-grep.restartLanguageServer",
        "title": "restart Language Server",
        "category": "ast-grep"
      },
      {
        "command": "ast-grep.searchInFolder",
        "title": "SG: Find ast-grep Pattern in Folder"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "ast-grep.searchInFolder",
          "group": "4_search",
          "when": "explorerResourceIsFolder"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "ast-grep",
      "properties": {
        "astGrep.serverPath": {
          "scope": "window",
          "type": "string",
          "description": "Specify the language server binary path. It can be a relative path to workspace root or an absolute path."
        },
        "astGrep.configPath": {
          "scope": "resource",
          "type": "string",
          "description": "Customize ast-grep config file path relative. Default is `sgconfig.yml`."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ast-grep-sidebar-view",
          "title": "ast-grep",
          "icon": "media/favicon.svg"
        }
      ]
    },
    "views": {
      "ast-grep-sidebar-view": [
        {
          "type": "webview",
          "id": "ast-grep.search.input",
          "name": "Structural Search"
        }
      ]
    }
  },
  "qna": "https://github.com/ast-grep/ast-grep/discussions",
  "sponsor": {
    "url": "https://github.com/sponsors/HerringtonDarkholme"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "pretest": "npm run compile",
    "test": "node ./scripts/test/runTest.mjs",
    "compile": "node ./scripts/build.mjs",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "format:check": "biome format .",
    "watch": "node ./scripts/build.mjs --watch",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*": "biome format --write --no-errors-on-unmatched",
    "*.{ts, js}": "biome lint"
  },
  "devDependencies": {
    "@biomejs/biome": "1.6.3",
    "@stylexjs/esbuild-plugin": "^0.5.1",
    "@stylexjs/stylex": "0.5.1",
    "@types/glob": "8.1.0",
    "@types/mocha": "10.0.6",
    "@types/node": "20.12.2",
    "@types/react": "18.2.73",
    "@types/react-dom": "18.2.23",
    "@types/vscode": "1.87.0",
    "@vscode/test-electron": "2.3.9",
    "@vscode/webview-ui-toolkit": "1.4.0",
    "esbuild": "0.20.2",
    "glob": "9.3.5",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "mocha": "10.4.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "5.0.1",
    "react-use": "17.5.0",
    "react-virtuoso": "4.7.7",
    "tslib": "2.6.2",
    "tsx": "4.7.1",
    "typescript": "5.4.3",
    "unport": "0.5.0",
    "vscode-languageclient": "9.0.1"
  }
}
