{
  "name": "ast-grep-vscode",
  "version": "0.0.2",
  "description": "VSCode extension for ast-grep language server",
  "keywords": [
    "ast-grep",
    "vscode",
    "language-server",
    "extension"
  ],
  "publisher": "ast-grep",
  "preview": true,
  "displayName": "ast-grep VSCode",
  "repository": "https://github.com/ast-grep/ast-grep-vscode",
  "author": "Herrington Darkholme",
  "license": "MIT",
  "main": "./out/extension.js",
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "ast-grep.search",
        "title": "Search pattern in current document",
        "category": "ast-grep"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "ast-grep",
      "properties": {
        "astGrep.serverPath": {
          "scope": "window",
          "type": "string",
          "default": "sg",
          "description": "Specify the language server binary path."
        },
        "astGrep.configPath": {
          "scope": "resource",
          "type": "string",
          "description": "Customize ast-grep config file path relative. Default is `sgconfig.yml`."
        }
      }
    }
  },
  "qna": "https://github.com/ast-grep/ast-grep/discussions",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "compile": "cross-env NODE_ENV=production tsc -b",
    "watch": "rm -rf dist && tsc -w",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.9",
    "@types/vscode": "^1.73.0",
    "@vscode/test-electron": "^2.2.0",
    "cross-env": "^7.0.3",
    "glob": "^9.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "mocha": "^10.1.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vscode-test": "^1.6.1"
  }
}
