{
  "name": "ast-grep-vscode",
  "version": "0.0.2",
  "description": "VSCode extension for ast-grep language server",
  "keywords": [
    "ast-grep",
    "vscode",
    "language-server",
    "extension"
  ],
  "publisher": "ast-grep",
  "preview": true,
  "displayName": "ast-grep VSCode",
  "repository": "https://github.com/ast-grep/ast-grep-vscode",
  "author": "Herrington Darkholme",
  "license": "MIT",
  "main": "./out/extension.js",
  "engines": {
    "vscode": "^1.86.0"
  },
  "icon": "media/favicon.png",
  "categories": [
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "ast-grep.restartLanguageServer",
        "title": "restart Language Server",
        "category": "ast-grep"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "ast-grep",
      "properties": {
        "astGrep.serverPath": {
          "scope": "window",
          "type": "string",
          "default": "sg",
          "description": "Specify the language server binary path."
        },
        "astGrep.configPath": {
          "scope": "resource",
          "type": "string",
          "description": "Customize ast-grep config file path relative. Default is `sgconfig.yml`."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ast-grep-sidebar-view",
          "title": "ast-grep",
          "icon": "media/favicon.svg"
        }
      ]
    },
    "views": {
      "ast-grep-sidebar-view": [
        {
          "type": "webview",
          "id": "ast-grep.search.input",
          "name": "Structural Search"
        }
      ]
    }
  },
  "qna": "https://github.com/ast-grep/ast-grep/discussions",
  "sponsor": {
    "url": "https://github.com/sponsors/HerringtonDarkholme"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "pretest": "npm run compile",
    "test": "node ./scripts/test/runTest.mjs",
    "compile": "cross-env NODE_ENV=production tsup",
    "typecheck": "tsc --noEmit",
    "prettier:check": "prettier --check .",
    "watch": "cross-env NODE_ENV=development tsup --watch",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "vscode-languageclient": "9.0.1",
    "tsx": "4.7.1",
    "react-use": "17.5.0",
    "tsup": "8.0.2",
    "@chakra-ui/react": "2.8.2",
    "react-icons": "5.0.1",
    "unport": "0.5.0",
    "execa": "8.0.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "@vscode/webview-ui-toolkit": "1.4.0",
    "@types/react": "18.2.55",
    "@types/react-dom": "18.2.19",
    "@types/glob": "8.1.0",
    "@types/mocha": "10.0.6",
    "@types/node": "20.11.17",
    "@types/vscode": "1.86.0",
    "@vscode/test-electron": "2.3.9",
    "cross-env": "7.0.3",
    "tslib": "2.6.2",
    "glob": "9.3.5",
    "husky": "9.0.10",
    "lint-staged": "15.2.2",
    "mocha": "10.3.0",
    "prettier": "3.2.5",
    "typescript": "5.3.3"
  }
}
