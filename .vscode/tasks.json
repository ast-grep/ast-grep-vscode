{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "compile",
      "group": "build",
      "presentation": {
        "panel": "dedicated",
        "reveal": "never"
      },
      "problemMatcher": [
        {
          // custom pattern to match error, e.g.
          // âœ˜ [ERROR] Expected "}" but found "TreeItem"
          "owner": "tsup",
          "pattern": {
            "regexp": "\\[ERROR\\]\\s(.+)$",
            "message": 1
          }
        }
      ]
    },
    {
      "type": "npm",
      "script": "watch",
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "panel": "dedicated",
        "reveal": "never"
      },
      "problemMatcher": [
        {
          "owner": "tsup",
          "pattern": {
            "regexp": "\\[ERROR\\]\\s(.+)$",
            "message": 1
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Build start",
            "endsPattern": "Build success"
          }
        }
      ]
    }
  ]
}
